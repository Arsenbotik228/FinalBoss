    android:background="@drawable/bg_search_view"
    android:layout_height="60dp"
    app:layout_constraintStart_toStartOf="parent"
    android:id="@+id/search_bar"
    app:layout_constraintEnd_toStartOf="@id/btn_search"
    android:hint="НАйти"
    app:queryHint="Найти"/>
